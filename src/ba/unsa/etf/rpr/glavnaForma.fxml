<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ba.unsa.etf.rpr.GlavnaForma"
      minHeight="Infinity" maxHeight="Infinity">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="Save As" onAction="#saveAction"/>
                    <MenuItem text="Exit" onAction="#exitAction"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <TableView fx:id="tableView">
        <columns>
            <TableColumn prefWidth="100.0" text="ID" fx:id="idColumn"/>
            <TableColumn prefWidth="300.0" text="Naziv" fx:id="nazivColumn"/>
            <TableColumn prefWidth="250.0" text="Glavni Grad" fx:id="glavniGradColumn"/>
        </columns>
    </TableView>

</VBox>
